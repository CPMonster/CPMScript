<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="cpmConfig">
    
    
    <!-- The default configuration settings -->
    <property name="default.tmpFolder" value="c:/tmp/cpm 2"/>
    <property name="default.XMLCatalog" value="${cpmRootPath}/cfg/catalog.xml"/>
    
    
    <!-- 
        The software components
    -->
    
    <!-- Readers -->    
    <import file="readers.xml" as="readers" prefixseparator="."/>
    
    <!-- Java -->
    <property name="java.exePath" value="java.exe"/>
    <property name="java.minMemory" value="-Xms500m"/>
    <property name="java.maxMemory" value="-Xmx500m"/>
        
    <!-- Saxon -->
    <property name="saxon.jarClasspath" location="${cpmRootPath}/blades/saxon/saxon9.jar"/>
    <property name="saxon.transformerFactory" value="net.sf.saxon.TransformerFactoryImpl"/>
            
    <!-- Resolving URIs -->       
    <property name="resolver.jarClasspath" value="${cpmRootPath}/blades/resolver/resolver.jar"/>        
  
</project>